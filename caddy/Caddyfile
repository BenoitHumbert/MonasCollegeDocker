https://monascollegeapp.bhdev.org {
    reverse_proxy http://directus:8055
}

https://monascollegeapp.bhdev.org {
    # Autres directives Caddy pour la configuration de votre site

    # Activer CORS pour autoriser les requÃªtes depuis https://websitetest.bhdev.org
    header / {
        Access-Control-Allow-Origin https://websitetest.bhdev.org
        Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
        Access-Control-Allow-Headers "Origin, Content-Type, Accept"
    }
}

